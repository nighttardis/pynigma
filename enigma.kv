<ColoredLabel>:
    pos_hint: {'x': 0.5, 'y': 0.5}
    canvas.before:
        Color:
            rgba: (191/255, 191/255, 191/255, 1)
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.background_color
        Ellipse:
            pos: (self.x+self.height * ((1-0.8)/2), self.y+self.width*((1-0.8)/2))
            size: (self.width * 0.8, self.height * 0.8)

<ColoredBox>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

