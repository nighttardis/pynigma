<ColoredLabel>:
    pos_hint: {'x': 0.5, 'y': 0.5}
    canvas.before:
        Color:
            rgba: (191/255, 191/255, 191/255, 1)
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.background_color
        Ellipse:
            pos: (self.x+self.height * ((1-0.8)/2), self.y+self.width*((1-0.8)/2))
            size: (self.width * 0.8, self.height * 0.8)

<ColoredBox>:
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

<EnigmaSettings>:
    left_roter_setting: left_roter_setting
    center_roter_setting: center_roter_setting
    right_roter_setting: right_roter_setting
    left_roter_start: left_roter_start
    center_roter_start: center_roter_start
    right_roter_start: right_roter_start
    left_roter_position: left_roter_position
    center_roter_position: center_roter_position
    right_roter_position: right_roter_position

    BoxLayout:
        size: (self.parent.width, self.parent.height)
        orientation: 'horizontal'
        GridLayout:
            cols: 4
            Label:
                text: ''
                font_size: 15
            Label:
                text: 'Left Roter'
                font_size: 15
            Label:
                text: 'Center Roter'
                font_size: 15
            Label:
                text: 'Right Roter'
                font_size: 15
            Label:
                text: 'Roter'
                font_size: 15
            Spinner:
                text: 'I'
                id: left_roter_setting
            Spinner:
                text: 'II'
                id: center_roter_setting
            Spinner:
                text: 'III'
                id: right_roter_setting
            Label:
                text: 'Start Position'
                font_size: 15
            Spinner:
                text: 'A'
                id: left_roter_start
            Spinner:
                text: 'A'
                id: center_roter_start
            Spinner:
                text: 'A'
                id: right_roter_start
            Label:
                text: 'Roter Position'
                font_size: 15
            Spinner:
                text: 'A'
                id: left_roter_position
            Spinner:
                text: 'A'
                id: center_roter_position
            Spinner:
                text: 'A'
                id: right_roter_position


<EnigmaUI>:
    right_roter: right_roter
    center_roter: center_roter
    left_roter: left_roter
    output: output
    output_a: output_a
    output_b: output_b
    output_c: output_c
    output_d: output_d
    output_e: output_e
    output_f: output_f
    output_g: output_g
    output_h: output_h
    output_i: output_i
    output_j: output_j
    output_k: output_k
    output_l: output_l
    output_m: output_m
    output_n: output_n
    output_o: output_o
    output_p: output_p
    output_q: output_q
    output_r: output_r
    output_s: output_s
    output_t: output_t
    output_u: output_u
    output_v: output_v
    output_w: output_w
    output_x: output_x
    output_y: output_y
    output_z: output_z

    BoxLayout:
        orientation: 'vertical'
        size: (self.parent.width, self.parent.height)
        ActionBar:
            ActionView:
                ActionPrevious:
                    with_previous: False
                ActionButton:
                    text: 'Settings'
                    on_press: root.settings()
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'A'
                id: left_roter
            Label:
                text: 'A'
                id: center_roter
            Label:
                text: 'A'
                id: right_roter
        BoxLayout:
            orientation: 'vertical'
            size: (self.parent.width, 300)
        TextInput:
            id: output
            readonly: True
            pos: self.pos
            size: self.size
        BoxLayout:
        BoxLayout:
            size: (self.parent.width, 100)
            orientation: 'horizontal'
